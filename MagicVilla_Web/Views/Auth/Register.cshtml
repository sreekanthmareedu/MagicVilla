@model MagicVilla_Web.Models.DTO.RegistrationDTO
<form method="post">

    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
 
    </div>

<div class="row text-bg-dark>
        <div asp-validation-summary= "All" class="text-danger"></div>




    <div class="col-6" offset-3 pb-2">
            <input asp-for="UserName" type="text" placeholder="Username" />

    </div>
   <div class="col-6" offset-3 pb-2">
            <input asp-for="Name" type="text" placeholder="Name" />
   </div>
   <div class="col-6" offset-3 pb-2">
            <input asp-for="Password" type="text" placeholder="Password" />
   </div>
   <div class="col-6" offset-3 pb-2">
            <button type="submit" value="Submit">register</button>
   </div>

</div>


</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}